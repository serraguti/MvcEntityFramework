@model Enfermo
@{
    ViewData["Title"] = "UpdateEnfermo";
}

<h1>Update Enfermo</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" name="Inscripcion"
                       class="form-control"
                       value="@Model.Inscripcion"/>
            <div class="form-group">
                <label class="control-label">Apellido</label>
                <input name="Apellido" class="form-control"
                       value="@Model.Apellido"/>
            </div>
            <div class="form-group">
                <label class="control-label">Direccion</label>
                <input name="Direccion" class="form-control"
                       value="@Model.Direccion"/>
            </div>
            <div class="form-group">
                <label class="control-label">Fecha Nacimiento</label>
                <input type="text" name="FechaNacimiento" 
                       class="form-control" 
                       value="@Model.FechaNacimiento.ToShortDateString()"/>
            </div>
            <div class="form-group">
                <label class="control-label">Sexo</label>
                <input name="Sexo" class="form-control"
                       value="@Model.Sexo"/>
            </div>
            <div class="form-group">
                <label class="control-label">Seguridad Social</label>
                <input name="SeguridadSocial" class="form-control" 
                       value="@Model.SeguridadSocial"/>
            </div>
            <div class="form-group">
                <button type="submit" class="btn-info">
                    Modificar enfermo
                </button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Enfermos">Volver a Enfermos</a>
</div>


