@model ResumenDepartamento

<h1>Resumen departamentos Lambda</h1>
<form method="post">
    <label>Número departamento</label>
    <input type="text" name="departamento" class="form-control"/>
    <button type="submit" class="btn-success">
        Mostrar empleados
    </button>
</form>
@if (Model != null)
{
    <p>Personas: @Model.Personas</p>
    <p>Máximo salario: @Model.MaximoSalario</p>
    <p>Mínimo salario: @Model.MinimoSalario</p>
    <table class="table table-dark">
        <thead>
            <tr>
                <th>APELLIDO</th>
                <th>OFICIO</th>
                <th>DEPARTAMENTO</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Empleado emp in Model.Empleados)
            {
                <tr>
                    <td>@emp.Apellido</td>
                    <td>@emp.Oficio</td>
                    <td>@emp.Departamento</td>
                </tr>
            }
        </tbody>
    </table>
}  