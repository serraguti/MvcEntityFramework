@model List<Empleado>
@{ 
    List<String> oficios = ViewData["OFICIOS"] as List<String>;
}
<h1>Incremento salarial empleados</h1>
<form method="post">
    <label>Oficios: </label>
    <select class="form-control" name="oficio">
        @foreach (String ofi in oficios)
        {
            <option value="@ofi">@ofi</option>
        }
    </select><br/>
    <label>Incremento salarial: </label>
    <input type="text" name="incremento"
           class="form-control"/><br/>
    <button type="submit" class="btn-info">
        Incrementar salarios
    </button>
</form>
<hr />
<table class="table table-bordered active">
    <thead>
        <tr>
            <th>APELLIDO</th>
            <th>OFICIO</th>
            <th>SALARIO</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Empleado emp in Model)
        {
            <tr>
                <td>@emp.Apellido</td>
                <td>@emp.Oficio</td>
                <td>@emp.Salario</td>
            </tr>
        }
    </tbody>
</table> 